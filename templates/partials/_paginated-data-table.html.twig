<table class="table table-bordered">
    <thead>
    <tr>
        <th>{{ knp_pagination_sortable(data.items, 'Id', 'c.id') }}</th>
        {% for prop_header, prop_name in data.props %}
            <th>{{ prop_header }}</th>
        {% endfor %}
        {% if data.actions %}
            <th>Actions</th>
        {% endif %}
    </tr>
    </thead>

    <tbody>
    {% for item in data.items %}
        <tr>
            <td>{{ item.id }}</td>
            {% for prop_header, prop_name in data.props %}
                <td>{{ attribute(item, prop_name) }}</td>
            {% endfor %}
            {% if data.actions %}
                <td>
                    {% for action in data.actions %}
                        <a href="{{ path(action.route, {id: item.id}) }}"
                           class="btn btn-{{ action.color }} btn-xs"><i class="bi {{ action.icon }}"></i>{{ action.label }}</a>
                    {% endfor %}
                </td>
            {% endif %}

        </tr>
    {% endfor %}
    </tbody>


</table>

{{ knp_pagination_render(data.items) }}